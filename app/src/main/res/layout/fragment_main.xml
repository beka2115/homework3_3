<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="6dp"
        android:orientation="vertical">

        <Button
            android:drawableLeft="@drawable/ic_baseline_directions_car_24"
            android:id="@+id/btn_car"
            style="@style/Base.Button"
            android:text="@string/car_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:drawableLeft="@drawable/ic_baseline_fastfood_24"
            android:id="@+id/btn_menu"
            style="@style/Base.Button"
            android:layout_marginVertical="6dp"
            android:text="@string/menu_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:drawableLeft="@drawable/ic_country"
            android:id="@+id/btn_country"
            style="@style/Base.Button"
            android:layout_marginBottom="6dp"
            android:text="@string/country_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


</FrameLayout>